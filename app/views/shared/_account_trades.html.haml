%table.table
  %thead
    %tr
      %th Timestamp
      %th Type
      %th Quantity
      %th Price
      %th Total
      %th Fee
  %tbody
    - account_trades.each do |trade|
      %tr
        %td= trade.timestamp.in_time_zone('UTC')
        %td= trade.type
        %td= "%.8f" % [ trade.quantity  ]
        %td= link_to trade.market.label, market_path(trade.market.id)
        %td= "%.8f" % trade.price
        %td= "%.8f" % trade.total
        %td= "%.8f" % trade.fee
